{
  "name": "passvault",
  "version": "0.7.0",
  "description": "Personal Password Generator &amp; Vault Intended to be Used in Local Desktop Systems",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "start-mac": "/Applications/Electron.app/Contents/MacOS/Electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahmetkasif/passvault.git"
  },
  "author": "ahmetkasif",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ahmetkasif/passvault/issues"
  },
  "homepage": "https://github.com/ahmetkasif/passvault#readme",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.3.1",
    "alertifyjs": "^1.11.1",
    "bootstrap": "^4.1.3",
    "crypto-js": "^3.1.9-1",
    "generate-password": "^1.4.0",
    "jquery": "^3.3.1",
    "moment": "^2.22.2",
    "popper.js": "^1.14.4"
  },
  "standard": {
    "globals": [
      "$"
    ]
  },
  "build": {
    "appId": "net.ahmetkasif.passvault",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "3.0.0",
    "electron-builder": "^20.28.4"
  }
}
